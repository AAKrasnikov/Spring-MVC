<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">

    <display-name>spring-mvc-app1</display-name>
    <absolute-ordering/>
<!--    создание диспетчерасервлет-->
    <servlet>
<!--        название-->
        <servlet-name>dispatcher</servlet-name>
<!--        Класс который используется для его создания-->
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
<!--        В параметрах передаются пути к файлам конфигурации-->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/applicationContextMVC.xml</param-value>
        </init-param>
<!--        Указывает очередь загрузки диспетчерасервлета в данном случаи он загрузится первым-->
        <load-on-startup>1</load-on-startup>
    </servlet>

<!--    Указываем наш диспетчер сервлет и указываем путь. в данном случаи любой url ведет к нашему ДС-->
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
